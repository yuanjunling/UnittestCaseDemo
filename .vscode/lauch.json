{
    "name": "Python3",
    "type": "python3",
    "request": "launch",
    "stopOnEntry": false,
    "pythonPath": "${config:python3.pythonPath}",
    "program": "${file}",
    "cwd": "${workspaceRoot}",
    "env": {
        "PYTHONPATH": "${workspaceRoot}"
    },
    "envFile": "${workspaceRoot}/.env",
    "debugOptions": [
        "WaitOnAbnormalExit",
        "WaitOnNormalExit",
        "RedirectOutput"
    ]
}